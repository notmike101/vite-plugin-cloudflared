{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,

    // Linting
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,

    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["index.ts"],
  "exclude": ["dist", "package.json"]
}